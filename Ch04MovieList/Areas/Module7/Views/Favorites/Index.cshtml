@model CountryListViewModel
@{ 
    ViewData["Title"] = "Favorites";
    Layout = "~/Areas/Module7/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>My Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" adp-controller="Home" class="btn btn-primary" 
           asp-route-activeCat="@Model.ActiveCat"
           asp-route-activeGame="@Model.ActiveGame">
                Back to Home Page</a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>

<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (var country in Model.Countries)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="~/images/@country.FlagImage" alt="" />
                         </div>
                        <div class="col-sm-4">
                            @country.Name
                        </div>
                        <div class="col-sm-4">
                            @country.Category.Name @country.Game.Name
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>