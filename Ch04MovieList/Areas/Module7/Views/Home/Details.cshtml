@model CountryViewModel
@{
    ViewData["Title"] = "Country Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Country Details</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.FlagImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Category: @Model.Country.Category.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <a asp-action="Index"
                   asp-route-category="@Model.ActiveCat"
                   asp-route-game="@Model.ActiveGame">
                    Return to Home Page
                </a>
            </li>
        </ul>
    </div>
</div>